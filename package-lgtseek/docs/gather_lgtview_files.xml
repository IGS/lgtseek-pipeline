<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>gather lgtview workflow</name>
        <command>
            <type>RunUnixCommand</type>
            <name>create pipeline directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>move LGT BAM</name>
            <state>incomplete</state>
            <executable>/bin/cp</executable>
			<arg>$;LGT_BAM_OUT$; $;OUTPUT_DIRECTORY$;/</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>move recipient BAM</name>
            <state>incomplete</state>
            <executable>/bin/cp</executable>
			<arg>$;RECIPIENT_BAM_OUT$; $;OUTPUT_DIRECTORY$;/</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>move microbiome BAM</name>
            <state>incomplete</state>
            <executable>/bin/cp</executable>
            <arg>$;MB_BAM_OUT$; $;OUTPUT_DIRECTORY$;/</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>move SRA metadata output</name>
            <state>incomplete</state>
            <executable>/bin/cp</executable>
            <arg>$;METADATA_FILE$; $;OUTPUT_DIRECTORY$;/</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>move m8 output</name>
            <state>incomplete</state>
            <executable>/bin/cp</executable>
            <arg>$;BLAST_M8_OUT$; $;OUTPUT_DIRECTORY$;/</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>move clone output</name>
            <state>incomplete</state>
            <executable>/bin/cp</executable>
            <arg>$;LGT_CLONE_OUT$; $;OUTPUT_DIRECTORY$;/</arg>
        </command>
    </commandSet>
</commandSetRoot>
